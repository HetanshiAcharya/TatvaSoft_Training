@{
    Layout = "_AdminLayout";
}
@using static HaloDocDataAccess.ViewModels.Constant;
@model List<HaloDocDataAccess.ViewModels.PatientProfile>;
<div class=" d-flex justify-content-center row mx-3 ">
    @* heading *@
    <div class="d-flex justify-content-between mt-5 p-2">
        <h4>Patient History</h4>
    </div>
    @* input fields *@
    <div class="container p-4 bg-white mx-2">
        <form class="mt-2" method="post" id="myform">
            <div class="row p-2">
                <div class="col-3">
                    <input type="text" class="form-control" placeholder="Firstname" name="FirstName" id="searchInput" />
                </div>
                <div class="col-3">
                    <input type="text" class="form-control" placeholder="Lastname" name="LastName" id="searchInput" />
                </div>
                <div class="col-3">
                    <input type="text" class="form-control" placeholder="Email" name="Email" id="searchInput" />
                </div>
                <div class="col-3">
                    <input type="text" class="form-control" placeholder="Phone Number" name="Phone" id="searchInput" />
                </div>
            </div>
            <div class="d-flex justify-content-end">
                @* save btn *@
                <div class="search m-2 shadow-none">
                    <button class="btn p-2 py-2 btn-outline-info bg-white" type="reset" id="clear" style="display:none;">
                       Clear
                    </button>
                </div>
                @* create acc btn  *@
                <div class="search m-2 shadow-none">
                    <button class="btn p-2 py-2 btn-info text-white" onclick="showbtn()">
                        Search
                    </button>
                </div>
            </div>
        </form>
        <div class="mt-3">
            <table class="table table-responsive">
                <colgroup>
                    <col span="1" style="width: 12%;">
                    <col span="1" style="width: 20%;">
                    <col span="1" style="width: 20%;">
                    <col span="1" style="width: 20%;">
                    <col span="1" style="width: 30%;">
                    <col span="1" style="width: 40%;">

                </colgroup>
                @* table Head *@
                <thead class="table-head align-middle table-secondary">
                    <tr>
                        @{
                            <th class="text-center">First Name</th>
                            <th class="text-center">Last Name</th>
                            <th class="text-center">Email</th>
                            <th class="text-center">Phone</th>
                            <th class="text-center">Address</th>
                            <th class="text-center">Actions</th>
                        }
                    </tr>
                </thead>
                @* table body *@
                <tbody class="table-body align-middle t-tab" id="providerbody">
                    @foreach (var item in Model)
                    {
                        <tr class="table-row border-bottom">
                            <td class="text-center">@item.FirstName</td>
                            <td class="text-center">@item.LastName</td>
                            <td class="text-center">@item.Email</td>
                            <td class="text-center">@item.Phone</td>
                            <td class="text-center">@item.Address</td>
                            <td class="text-center">
                                <button class="btn p-2 py-2 mx-2 btn border-info text-info" data-bs-toggle="modal" data-bs-target="#contactprovidermodal" data-id="@item.Email" id="contactprovider">
                                    Explore
                                </button>
                            </td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* Generic Search  *@
<script>
    function showbtn(event){
        $('#clear').show();
        event.preventDefault();
        $('#myform').submit();

    }
</script>
