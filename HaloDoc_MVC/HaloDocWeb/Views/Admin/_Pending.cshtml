<script>
    function SendAgreement(reqId) {
        console.log(reqId);
        $.ajax({
            url: '@Url.Action("SendAgreementModal", "Admin")',
            data: { Reqid: reqId },
            type: 'POST',
            success: function (result) {
                $('#display').html(result);
                $('#sendAgreementModal').modal('show');
            },
            error: function (error) {
                console.log(error);
                alert('Error Fetching Request')
            },
        });
    }
</script>