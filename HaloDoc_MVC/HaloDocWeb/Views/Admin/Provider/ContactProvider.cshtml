
<div class="modal fade" id="contactprovidermodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title text-white bg-info" id="staticBackdropLabel">Contact your Provider</h5>
                <button type="button" class="btn-close " data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @* --------------- Main Form --------------------------  *@
            <form method="post" asp-action="SendEmailProvider" asp-controller="Provider">
                <input type="hidden" id="emailIdProvider" name="Email" />
                <div class="modal-body">
                    <p><small>Choose communication to send message</small></p>
                    <div class="form-check mb-2 ">
                        <input class="form-check-input shadow-none" type="radio" name="flexRadioDefault">
                        <label class="form-check-label">
                            SMS
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input shadow-none" type="radio" name="flexRadioDefault">
                        <label class="form-check-label">
                            Email
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input shadow-none" type="radio" name="flexRadioDefault">
                        <label class="form-check-label">
                            Both
                        </label>
                    </div>
                    <textarea name="Message" class="form-control" id="exampleFormControlTextarea1" rows="4"
                              placeholder="Message"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info text-white shadow-none">Send</button>
                    <button type="button" class="btn border-info shadow-none text-info" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
