@{
    Layout = "_AdminLayout";

}
@using static HaloDocDataAccess.ViewModels.Constant;
@model HaloDocDataAccess.ViewModels.ProviderMenu;
<div class="container-fluid d-flex justify-content-center row ">
    <div class="col-8">
        <div class="d-flex justify-content-between mt-5">
            <h4>Documents</h4>
            <button onclick="history.go(-1)" class="btn btn-outline-info shadow-none night-mode-btn">
                <span>Back</span>
            </button>
        </div>
        <div class="shadow p-3 dashboard-card mt-4">
            <div class="searchPatientRegion d-flex justify-content-between py-2">
                <div class="search m-1 shadow-none">
                    <i class="fa fa-search"></i>
                    @* <input type="hidden" id="regionvalue" /> *@
                    <select class="form-select mb-3" data-allow-clear="true" tabindex="-1" id="regiondropdown" asp-items="@(new SelectList(ViewBag.AssignCase,"RegionId","Name"))" data-control="select2" data-placeholder="Select Level">
                        <option>All Region</option>
                    </select>
                </div>
                <div class="search m-2 shadow-none">
                    <button class="btn p-2 py-2 btn-info">
                        <a class="text-decoration-none text-white" asp-controller="Admin" asp-action="Logout"><strong>Create Provider Account</strong></a>
                    </button>
                </div>
            </div>
            <div class="mt-3">
                <table class="table ">
                    <colgroup>
                        <col span="1" style="width: 10%;">
                        <col span="1" style="width: 30%;">
                        <col span="1" style="width: 30%;">
                        <col span="1" style="width: 30%;">
                        <col span="1" style="width: 30%;">
                        <col span="1" style="width: 40%;">

                    </colgroup>
                    @* table Head *@
                    <thead class="table-head align-middle">
                        <tr>
                            @{
                                <th class="text-center">Stop Notification</th>
                                <th>Provider Name</th>
                                <th>Role</th>
                                <th>On Call Status</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            }
                        </tr>
                    </thead>
                    @* table body *@
                    <tbody class="table-body align-middle t-tab">
                        @foreach (var item in Model.ProviderLists)
                        {
                            <tr class="table-row border-bottom">
                                <td>
                                    <input type="checkbox" class="checkbox" name="checkedfile" value="">
                                </td>
                                <td>@item.FirstName @item.LastName</td>
                                <td>@item.Role</td>
                                <td>@item.OnCallStatus</td>

                                <td></td>

                                <td class="d-flex  ">
                                    <button class="btn p-2 py-2 mx-2 btn border-info">
                                        <a class="text-decoration-none text-info" >Contact</a>
                                    </button>
                                    <button class="btn p-2 py-2 btn border-info">
                                        <a class="text-decoration-none text-info" >Edit</a>
                                    </button>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div style="height: 20px;"></div>
    </div>
