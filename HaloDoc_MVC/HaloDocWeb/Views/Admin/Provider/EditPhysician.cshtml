﻿@{
    Layout = "_AdminLayout";
}
@model HaloDocDataAccess.ViewModels.AdminDetailsInfo
@* --------------- Main Form --------------------------  *@
<div class="container viewcasecard">
    @* --------------- Modal Header --------------------------  *@
    <div class="d-flex justify-content-between mb-4">
        <div class="d-flex justify-content-evenly">
            <h5 class="mt-3"><strong>My Profile</strong></h5>
        </div>
        <button onclick="backbtn()" class="btn btn-outline-info shadow-none night-mode-btn">
            <span><a class="link" asp-controller="Admin" asp-action="Index">Back</a></span>
        </button>
    </div>
    <div class="p-3 bg-white">
        @* Account Information  *@
        <form method="post" asp-action="" asp-controller="">
            <div class="row">
                <input type="hidden" asp-for="AdminId" />
                <h6><strong>Account Information</strong></h6>
                <div class="col-lg-6">
                    <input asp-for="UserName" class="form-control col-md mt-4"
                           type="text"
                           id="username"
                           placeholder="UserName" required disabled />
                </div>
                <div class="col-lg-6">
                    <input asp-for="Password" class="form-control form-control-md col-md col-sm mt-4"
                           type="password"
                           id="password"
                           placeholder="Password" required />
                </div>
            </div>
            <div class="row">
                <div class="dropdown col-lg-6 mt-4">
                    <select class="form-select" aria-label="Default select example" id="status" disabled asp-for="Status">
                        <option>Status</option>
                        <option value="1">Active</option>
                        <option value="2">Not Active</option>
                    </select>
                </div>
                <div class="dropdown col-lg-6 mt-4">
                    <select class="form-select mb-3" aria-label="Default select example" id="role" disabled asp-for="Role" itemid="role">
                        <option>Roles</option>
                        <option value="1">Master</option>
                        <option value="2">Not Master</option>
                    </select>
                </div>
            </div>
            @* edit button ~ acc info *@
            <div class="d-flex justify-content-end align-items-center mt-2">
                <div class="d-flex justify-content-end ">
                    <a id="edit1" onclick="enable_disable1()" class="btn btn-info text-white rounded py-2 px-3 me-2">Edit</a>
                    <a id="submit1" class="btn btn-info text-white rounded py-2 px-3 me-2" value="Save" style="display:none;">Save</a>
                </div>
                <div>
                    <input type="submit" value="Reset Password" id="resetpassbtn" class="btn border border-info text-info" />

                </div>
            </div>
        </form>
        @* Physician Information  *@
        <form method="post" asp-action="" asp-controller="" id="">
            <input type="hidden" asp-for="AdminId" />
            <div class="row">
                <h6><strong>Administrator Information</strong></h6>
                <div class="col-lg-6">
                    <input asp-for="FirstName" class="form-control mt-4"
                           type="text"
                           id="fname"
                           placeholder="FirstName" required disabled />
                </div>
                <div class="col-lg-6">
                    <input class="form-control   mt-4"
                           type="text"
                           id="lname"
                           placeholder="LastName" required disabled />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <input asp-for="Email" class="form-control  mt-4"
                           type="email" id="email"
                           placeholder="Enter Email" required disabled />
                </div>
                <div class="col-lg-6 mt-4">
                    <input id="phone1"
                           asp-for="Phone"
                           type="tel"
                           class="form-control iti" disabled />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <input asp-for="FirstName" class="form-control mt-4"
                           type="text"
                           id="medLicense"
                           placeholder="Medical License" required disabled />
                </div>
                <div class="col-lg-6">
                    <input class="form-control mt-4"
                           type="text" id="npi"
                           placeholder="NPI Number" required disabled />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <input class="form-control mt-4"
                           type="text" id="syncemail"
                           placeholder="Synchronization Email Address" required disabled />
                </div>
            </div>
            @* edit button ~ phy Info *@
            <div class="d-flex justify-content-end mt-4">
                <a id="edit2" onclick="enable_disable2()" class="btn btn-info text-white rounded py-2 px-3 me-2">Edit</a>
                <a id="submit2" class="btn btn-info text-white rounded py-2 px-3 me-2" value="Save" style="display:none;">Save</a>
            </div>

        </form>
        @* Mailing Information *@
        <form method="post" asp-action="" asp-controller="">
            <input type="hidden" asp-for="AdminId" />
            <div class="row">
                <h6><strong>Mailing Information</strong></h6>
                <div class="col-lg-6">
                    <input asp-for="Add1" class="form-control mt-4"
                           type="text" id="add1"
                           placeholder="Address 1" required disabled />
                </div>
                <div class="col-lg-6">
                    <input asp-for="Add2" class="form-control mt-4"
                           type="text" id="add2"
                           placeholder="Address 2" required disabled />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <input asp-for="City" class="form-control  mt-4"
                           type="text" id="city"
                           placeholder="City" required disabled />
                </div>
                <div class="col-lg-6">
                    <input asp-for="State" class="form-control  mt-4"
                           type="text" id="state"
                           placeholder="State" required disabled />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <input asp-for="Zip" class="form-control"
                           type="text" id="zip"
                           placeholder="Zip" required disabled />
                </div>
                <div class="col-lg-6">
                    <input id="phone2"
                           type="tel"
                           asp-for="PhoneForBill"
                           class="form-control  iti" disabled />
                </div>
            </div>
            @* edit button ~ bilinginfo *@
            <div class="d-flex justify-content-end mt-4">
                <a id="edit3" onclick="enable_disable3()" class="btn btn-info text-white rounded py-2 px-3 me-2">Edit</a>
                <input type="submit" id="submit3" class="btn btn-info text-white rounded py-2 px-3 me-2" value="Save" style="display:none;">
            </div>
        </form>
        @* Provider Profile *@
        <form method="post" asp-action="" asp-controller="">
            <input type="hidden" asp-for="AdminId" />
            <div class="row">
                <h6><strong>Provider Profile</strong></h6>
                <div class="col-lg-6">
                    <input asp-for="Add1" class="form-control mt-4"
                           type="text" id="bname"
                           placeholder="Business Name" required disabled />
                </div>
                <div class="col-lg-6">
                    <input asp-for="Add2" class="form-control mt-4"
                           type="email" id="bwebsite"
                           placeholder="Business Website" required disabled />
                </div>
            </div>
            <div class="row">
               <div class="col-lg-6">
                   <input type="file" class="form-control mt-4" />
               </div>
                <div class="col-lg-5">
                    <input type="file" class="form-control mt-4" />
                </div>
                <div class="col-lg-1">
                    <button class="btn btn-info text-white mt-4">Create</button>
                </div>
            </div>
            
            @* edit button ~ bilinginfo *@
            <div class="d-flex justify-content-end mt-4">
                <a id="edit3" onclick="enable_disable3()" class="btn btn-info text-white rounded py-2 px-3 me-2">Edit</a>
                <input type="submit" id="submit3" class="btn btn-info text-white rounded py-2 px-3 me-2" value="Save" style="display:none;">
            </div>
        </form>
    </div>
</div>
<script>
    window.onload = function (e) {

        $(".form-check-input").prop("disabled", true);
    }
    function enable_disable() {
        $("#email").removeAttr('disabled');
        $("#phone1").removeAttr('disabled');
        $("#cemail").removeAttr('disabled');
        $("#uname").removeAttr('disabled');
        $("#pwd").removeAttr('disabled');
        $(".form-check-input").prop("disabled", false);
        $("#submit").css("display", "block");
        $("#edit").css("display", "none");
    }

</script>

