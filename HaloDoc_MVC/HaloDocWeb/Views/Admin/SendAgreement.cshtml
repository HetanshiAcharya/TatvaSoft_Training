﻿<div class="modal fade" id="SendAgreement" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title text-white bg-info" id="staticBackdropLabel">Send Agreement</h5>
                <button type="button" class="btn-close " data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @* --------------- Main Form --------------------------  *@
            <form method="post" >
                <input type="hidden" name="requestid" id="" />
                <div class="modal-body">
                    <p><small>To Send Agreement please make sure you are uploading the correct contact information below for the responsible party</small> </p>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <input class="form-control" id="SendAgreement_phone" value=""/>
                        </div>
                        <div class="col-lg-12 mt-4">
                            <input class="form-control" id="SendAgreement_email" type="email" value=""/>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-outline-info">Submit</button>
                    <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
@* --------------- Script and Ajax for Assign Case --------------------------  *@

<script type="text/javascript">
    function AssignPhysician1() {
        var region = $("#region1").val();
        console.log(region);
        $.ajax({
            type: "POST",
            url: '@Url.Action("PhysicianbyRegion", "Admin")?Regionid=' + region,
            cache: false,
            success: function (response) {
                console.log(response);
                var select = '<option value="">Please Select</option>';
                for (var i = 0; i < response.length; i++) {
                    select += '<option value="' + response[i].physicianId + '">' + response[i].firstName + " " + response[i].lastName + '</option>';
                }

                $("#provider").html(select);
            },
            error: function () {
                alert("Error");
            }
        });
    }
</script>