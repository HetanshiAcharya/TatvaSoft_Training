    })
    $(".search").on("keyup", function () {
        sortSearch("search");
    });
    function sortSearch(event) {
        //var btnid = event.target.id;
       
        
        if (event == "search") {
            $('#CurrentPage').val(1);
        }
        var formdata = $('#mainform').serialize();


        $.ajax({
